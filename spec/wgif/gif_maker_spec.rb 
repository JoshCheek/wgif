require 'rspec'
require 'spec_helper'
require 'wgif/gif_maker'
require 'wgif/video'

describe WGif::GifMaker do

  it 'converts a directory of frames to a gif' do
    video = WGif::Video.new "penguin", "spec/fixtures/penguin.mp4"
    video = video.trim "00:00:02", "00:00:07"
    frames = video.to_frames(frames: 40)
    described_class.make_gif(frames, "penguin.gif")
    gif = File.open("penguin.gif")
    gif.should_not be_nil
  end

  it 'optimizes a gif' do
    
  end
  
end
